<?xml version="1.0"?>
<launch>
  <arg name='origin' default='-x 0 -y 0 -z 0.0'/>
  <arg name='robot_name' default='ur5'/>
  <arg name='3f' default='false' />

  <!-- send robot urdf to param server -->
  <include file="$(find ur_e_description)/launch/ur5e_upload.launch">
    <arg name="3f" value="$(arg 3f)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model $(arg robot_name) $(arg origin) -model $(arg robot_name) -J shoulder_lift_joint -1.5 -J elbow_joint 1.0 -J wrist_2_joint 1.57 -J gripper_palm_finger_1_joint 0 -J gripper_finger_1_joint_1 0 -J gripper_finger_1_joint_2 0 -J gripper_finger_1_joint_3 0 -J gripper_finger_2_joint_1 0 -J gripper_finger_2_joint_2 0 -J gripper_finger_2_joint_3 0 -J gripper_finger_middle_joint_1 0 -J gripper_finger_middle_joint_2 0 -J gripper_finger_middle_joint_3 0" respawn="false" output="screen" />

  <!-- send robot controller ro param server -->
  <rosparam file="$(find ur_e_gazebo)/controller/ur5_controller_params_pid.yaml" command="load"/>
  
  <!-- spawn joint controllers -->
  <node name="controller_spawner_robot" pkg="controller_manager" type="spawner" respawn="true" output="screen" args="shoulder_pan_joint_position_controller shoulder_lift_joint_position_controller elbow_joint_position_controller wrist_1_joint_position_controller wrist_2_joint_position_controller wrist_3_joint_position_controller joint_state_controller" />

  <!-- evaluate '3f' argument for 3f or 2f gripper spawning -->
  <group unless='$(arg 3f)'>
    <rosparam file="$(find ur_e_gazebo)/controller/gripper_controller_robotiq.yaml" command="load"/>
    <node name="controller_spawner_2f" pkg="controller_manager" type="spawner" respawn="true" output="screen" args="gripper" />
  </group>

  <group if='$(arg 3f)'>
    <rosparam file="$(find ur_e_gazebo)/controller/gripper_3f_controller.yaml" command="load"/>
    <node name="robotiq_controller_spawner_3f" pkg="controller_manager" type="spawner" args="palm_finger_1_joint_controller finger_1_joint_1_controller finger_2_joint_1_controller finger_middle_joint_1_controller" respawn="true" output="screen"/>
  </group>

  <!-- robot state publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>
  
  <!-- robot controller -->
  <node name="controller" pkg="nodes" type="controller.py" args="$(arg robot_name)" output="screen" />
  <node name="cart_pos" pkg="nodes" type="cart_pos.py" args="$(arg robot_name)" output="screen" />  


  <!-- phantom / master controller -->
  <node name="position_phantom_controller" pkg="nodes" type="position_phantom.py" args="$(arg robot_name)" output="screen" />
  <node name="force_phantom_controller" pkg="nodes" type="force_phantom.py" args="$(arg robot_name)" output="screen" />

</launch>
